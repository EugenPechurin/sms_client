<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <record id="garazd_sms_sms_tree" model="ir.ui.view">
      <field name="name">garazd.sms.sms.tree</field>
      <field name="model">sms.sms</field>
      <field name="inherit_id" ref="base_sms_client.sms_sms_tree"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='gateway_id']" position="after">
            <field name="turbosms_uuid" invisible="1"/>
            <field name="turbosms_state" string="TurboSMS"
                attrs="{'invisible': [('turbosms_uuid', '=', False)]}"/>
            <button string="" name="get_turbosms_send_status"
                type="object" icon="fa-commenting-o"
                help="Get TurboSMS send status"
                attrs="{'invisible': [('turbosms_uuid', '=', False)]}"/>
        </xpath>
      </field>
  </record>

  <record id="garazd_sms_sms_form" model="ir.ui.view">
      <field name="name">garazd.sms.sms.form</field>
      <field name="model">sms.sms</field>
      <field name="inherit_id" ref="base_sms_client.sms_sms_form"/>
      <field name="arch" type="xml">
        <xpath expr="//sheet" position="inside">
            <group name="turbosms">
              <field name="turbosms_uuid"/>
              <field name="turbosms_state" string="TurboSMS"
                  attrs="{'invisible': [('turbosms_uuid', '=', False)]}"/>
              <button string="Get SMS status" name="get_turbosms_send_status"
                  type="object" icon="fa-commenting-o"
                  help="Get TurboSMS send status"
                  attrs="{'invisible': [('turbosms_uuid', '=', False)]}"/>
            </group>
        </xpath>
      </field>
  </record>

</odoo>
